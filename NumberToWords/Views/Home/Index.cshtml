<div class="jumbotron">
    <h1 style="text-align:center">Convert Numbers to Words</h1>
</div>
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="txtName">Name</label>
                <input type="text" class="form-control" id="txtName" aria-describedby="emailHelp" required>
                <span id="spnNameError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="txtNumber">Number</label>
                <input type="number" step="0.01" class="form-control" id="txtNumber" required max="9999">
                <span id="spnNumberError" class="text-danger"></span>

            </div>
            <button type="submit" onclick="return false;" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>
<div >
    <h4 style="border-bottom: 6px solid #95d596;
  background-color: lightgrey;">Result</h4>
    <div id="result" style="font-size: 30px;">

    </div>
</div>
<script src="~/Scripts/ManageNumber.js"></script>
